@model DENTALMIS.Web.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<style>
    .img1 {
        background-image: url(~/Content/Images/bg.png);
    }
</style>

@*style="background-image: url(/Content/Images/bg.png)"*@
<div id="mainContent">
    <section class="container">

        <div class="innerContainer" >

            <div class="row">
                <div id="myWizard" class="formArea LRmargin">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div id="divMessage" class=" text-center col-md-4 col-sm-4 col-md-offset-4 alert alert-success" style="margin-top: 20px;">
                            @Html.ValidationSummary()
                        </div>





                        <div class="logo col-sm-12 text-center col-md-12 " style="float: left;"> <img alt="" src="~/Content/Images/dotnetsai.png" /></div>
                        <div class="col-md-4 col-md-offset-4 col-xs-12">
                            <div class="loginPage panel panel-info">
                                <div class="form-group" style="margin-left: 20px;">
                                    <span class=""><i class="glyphicon glyphicon-user"></i> User</span>
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", autocomplete = "on" })
                                    @Html.ValidationMessageFor(m => m.UserName)

                                </div>
                                <div class="form-group" style="margin-left: 20px;">
                                    <span class=""><i class="glyphicon glyphicon-lock"></i> Password</span>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", autocomplete = "off" })
                                    @Html.ValidationMessageFor(m => m.Password)

                                </div>
                                <div class="form-group" style="margin-left: 20px;">
                                    <input id="BtnLogin" type="submit" class="btn btn-success btn-pressure" name="BtnLogin" value="Login" />
                                    <input id="BtnReset" type="reset" class="btn btn-info btn-pressure" name="BtnReset" value="Reset" />

                                </div>


                            </div>
                        </div>





                    }

                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </section>
</div>


