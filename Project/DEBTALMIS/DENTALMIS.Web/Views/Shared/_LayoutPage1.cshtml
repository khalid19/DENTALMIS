@using System.Collections.Specialized
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    <script src="/Scripts/scerp.constant.js?@(DateTime.Now.Ticks)" type="text/javascript"></script>
</head>
<body>

    <div id="main" class="main">
        <div class="top-banner">
            <div style="margin-left: 2px; margin-top: 2px;">
                <img src="~/Content/images/Plummy_logo.png" width="200px" height="83px" />
            </div>

        </div>
        <div class="topbar">
            @if (Request.IsAuthenticated)
            {
                <table cellspacing="0" cellpadding="0" border="0" style="float:right">
                    <tr>
                        <td style="font-weight: bold; font-size: 100%; " class="login-status">
                            @User.Identity.Name
                        </td>
                        <td>
                            @Html.ActionLink("Log-off", "LogOff", "Home", new { Area = "" }, new { @class = "logout" })
                        </td>
                    </tr>
                </table>

            }
        </div>
        <div class="toplabel">

        </div>

        <div id="menu" class="Menu">

            <div id='cssmenu'>

                @*<ul>
                        <li><a style="color: #ffffff; cursor: pointer" class="ajaxLoad" action="/HRM/Report/ShortLeaveSummaryIndex"><span class="moduleFeatureColor"> &nbsp; &nbsp; &nbsp;Short Leave Summary</span></a></li>
                    </ul>
                    <ul>
                        <li><a style="color: #ffffff; cursor: pointer" class="ajaxLoad" action="/HRM/EmployeeGradeSalaryPercentage/Index"><span class="moduleFeatureColor"> &nbsp; &nbsp; &nbsp;Employee Grade Salary Percentage</span></a></li>
                    </ul>*@
            </div>


            <div id='cssmenu'>
                @{ Html.RenderAction("Simple", "TreeView", new { area = "" });}
            </div>
        </div>
        <div id="content-padding" class="Menu-Padding"></div>

        <div id="contentRight" class="Content">
            @RenderBody()
        </div>

        <div id="content-padding-right" class="Menu-Padding"></div>


        <div class="footer">
            <div style="font-size: 12px; color: #ffffff;">Copyright &copy; @(DateTime.Now.Year) Plummy Fashions Limited.</div>
            <div style="font-size: 10px; color: #ffffff;">
                Powered by <a href="http://www.soft-code.net/" style="color: #ffffff;">Soft Code</a>. All Rights Reserved.
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/others")
    @Scripts.Render("~/bundles/scerp")

    <link href="~/Scripts/jQuery-File-Upload/uploadfile.css" rel="stylesheet" />
    <script src="~/Scripts/jQuery-File-Upload/jquery.uploadfile.min.js"></script>
</body>
</html>


